<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cardsagainstyourliver">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ManualActivity" />
        <activity android:name=".PauseMenuActivity" />
        <activity android:name=".BettlerActivity" />
        <activity android:name=".GamelistActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".ProfileSettingsActivity" />
        <activity android:name=".SchwimmenActivity" />
        <activity android:name=".NewGameActivity" />
        <activity android:name=".PlayerSelectionActivity" />
        <activity
            android:name=".PopUpPermilleCalcActivity"
            android:theme="@style/AppTheme.PopUpPromille" />
        <activity
            android:name=".PopUpPlayerChangeActivity"
            android:theme="@style/AppTheme.PopUpSpielerwechsel" />
        <activity
            android:name=".PopUpPlayerChangeBettlerActivity"
            android:theme="@style/AppTheme.PopUpSpielerwechsel" /> 
        <activity
            android:name=".PopUpKartenauswahlActivity"
            android:theme="@style/AppTheme.PopUpKartenauswahl" />
        <activity
            android:name=".PopUpEndGameBettlerActicity"
            android:theme="@style/AppTheme.PopUpSpielende" />
        <activity
            android:name=".PopUpEndGameActivity"
            android:theme="@style/AppTheme.PopUpSpielende" />
        <activity
            android:name=".PopUpEndRoundActivity"
            android:theme="@style/AppTheme.PopUpSpielende" />


    </application>

</manifest>